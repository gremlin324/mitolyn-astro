  </Section>

  <!-- FAQ Section -->
  <Section id="faq" bgColor="navy" title="Frequently Asked Questions" subtitle="Everything you need to know about Mitolyn">
    <div class="max-w-3xl mx-auto space-y-4">
      {faqItems.map((item, idx) => (
        <details class="group bg-navy-800 rounded-lg p-6 cursor-pointer hover:bg-navy-700 transition-colors">
          <summary class="flex items-center justify-between font-bold text-white text-lg">
