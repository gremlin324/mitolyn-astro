        <Card class={`flex flex-col ${option.popular ? 'ring-2 ring-primary-500 md:scale-105' : ''}`}>
          {option.popular && (
            <div class="bg-primary-500 text-white text-center py-2 rounded-t-lg -m-6 mb-4 font-bold">
