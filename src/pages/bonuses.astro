---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';

const bonuses = [
  {
    title: '1-Day Kickstart Detox',
    value: '$47',
    description: 'Detox, cleanse and flush your organs to aid absorption and kickstart your Mitolyn journey.',
    features: [
      '20 Bizarre 15-Second Detox Tea Recipes',
      'Using Everyday Kitchen Ingredients',
      'Complete Cleansing Protocol',
      'Step-by-Step Instructions',
    ],
  },
  {
    title: 'Renew You',
    value: '$39',
    description: 'Discover simple methods to instantly relieve stress, calm your mind, boost confidence and reduce anxiety.',
    features: [
      'Stress Relief Techniques',
      'Confidence Building Exercises',
      'Anxiety Management Tools',
      'Daily Mindfulness Practices',
    ],
  },
];
---

<BaseLayout title="Mitolyn Bonuses - Free eBooks Worth $86" description="Get 2 exclusive bonus eBooks worth $86 when you order Mitolyn today.">
  
  <Section id="hero" bgColor="gradient" title="Limited-Time Bonus Offer" subtitle="Get 2 Premium eBooks FREE When You Order Today">
    <div class="max-w-3xl mx-auto text-center">
      <p class="text-xl text-gray-700 mb-8">
        These bonuses are only available when you order today. Combined value: <span class="font-bold text-coral-600">$86</span>
      </p>
      <div class="text-5xl mb-4">üéÅ</div>
    </div>
  </Section>

  <Section id="bonuses" title="Your Free Bonus EBooks" subtitle="Included with 3-Bottle and 6-Bottle Packages">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {bonuses.map((bonus, idx) => (
        <Card class="flex flex-col">
          <div class="flex items-start justify-between mb-4">
            <h3 class="font-display font-bold text-xl text-navy-900">{bonus.title}</h3>
            <div class="text-right">
              <p class="text-xs text-gray-500">Free Value</p>
              <p class="text-coral-600 font-bold text-lg">{bonus.value}</p>
            </div>
          </div>
          
          <p class="text-gray-600 mb-6">{bonus.description}</p>
          
          <div class="space-y-3 mb-6 flex-grow">
            {bonus.features.map((feature) => (
              <div class="flex items-start gap-3">
                <span class="text-primary-500 font-bold mt-1">‚úì</span>
                <span class="text-gray-700">{feature}</span>
              </div>
            ))}
          </div>
          
          <div class="h-40 bg-gradient-to-br from-primary-50 to-coral-50 rounded-lg flex items-center justify-center border-2 border-dashed border-primary-200">
            <div class="text-center">
              <div class="text-4xl mb-2">üìò</div>
              <p class="text-xs text-gray-600">eBook Preview</p>
            </div>
          </div>
        </Card>
      ))}
    </div>
  </Section>

  <Section id="guarantee" bgColor="gray" title="Money-Back Guarantee Still Applies" subtitle="Your satisfaction is guaranteed with every purchase">
    <div class="max-w-2xl mx-auto">
      <Card>
        <p class="text-lg text-gray-700 mb-4">
          Even with these incredible bonuses, you're still protected by our <strong>100% 90-day money-back guarantee</strong>.
        </p>
        <p class="text-gray-700">
          If Mitolyn doesn't deliver the results you expect, simply request a refund and keep the bonuses. No questions asked.
        </p>
      </Card>
    </div>
  </Section>

  <Section id="urgency" bgColor="navy" class="py-12">
    <div class="text-center text-white">
      <h2 class="font-display text-3xl font-bold mb-4">Don't Miss Out on Your Free Bonuses</h2>
      <p class="text-lg mb-8 max-w-2xl mx-auto">
        These bonuses are only available for a limited time and only with 3-Bottle or 6-Bottle packages.
      </p>
      <Button variant="primary" size="lg">Claim Your Mitolyn + Bonuses Now</Button>
    </div>
  </Section>

</BaseLayout>
