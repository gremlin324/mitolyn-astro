---
interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  class?: string;
  bgColor?: 'white' | 'gray' | 'navy' | 'gradient';
}

const {
  id,
  title,
  subtitle,
  class: className = '',
  bgColor = 'white',
} = Astro.props;

const bgClasses = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  navy: 'bg-navy-50',
  gradient: 'bg-gradient-to-r from-primary-50 to-primary-100',
};
---

<section
  id={id}
  class={`py-16 md:py-24 ${bgClasses[bgColor]} ${className}`}
>
  <div class="container mx-auto px-4">
    {title && (
      <div class="mb-12 text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-navy-900 mb-3">
          {title}
        </h2>
        {subtitle && (
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>
