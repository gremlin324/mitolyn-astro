---
interface Props {
  class?: string;
  elevated?: boolean;
}

const { class: className = '', elevated = true } = Astro.props;
---

<div class={`rounded-xl p-6 bg-white ${elevated ? 'shadow-lg hover:shadow-xl' : 'border border-gray-200'} transition-shadow duration-300 ${className}`}>
  <slot />
</div>

<style>
  div {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  div:hover {
    transform: translateY(-2px);
  }
</style>
